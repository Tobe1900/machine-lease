.good_container {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  border-bottom: 1px solid #e1e1e1;
  background-color: #fefefe;
}

.description_container {
  display: flex;
  flex-direction: row;
  width: 85%;
  font-size: 28rpx;
}

.description_item {
  display: flex;
  flex-direction: column;
  width: calc(80% - 10px);
  padding-left: 20px;
  padding-top: 30px;
}

.btn_container {
  width: 35%;
  display: flex;
  flex-direction: row;
  margin-left: 10px;
  padding-top: 40px;
}

