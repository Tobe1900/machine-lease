  width: 24px;
  height: 24px;
  text-align: center;
  border: 1px solid #dedede;
  outline: none;
  font-size: 12px;
  padding-left: 2px;
  padding-right: 2px;
  line-height: 20px;
}

.num {
  height: 20px;
  line-height: 20px;
  width: 24px;
  text-align: center;
}

.cart_bottom_container {
  position: fixed;
  bottom: 0;
  height: 40px;
  display: flex;
  flex-direction: row;
  width: 100%;
  background-color: #f8f8f8;
  z-index: 999;
}

.cart_bottom_label {
  flex: 2;
  height: 39px;
  line-height: 39px;
  border-top: 1px solid #d8d8d8;
  font-size: 14px;
  text-indent: 10px;
}

.cart_bottom_btn {
  flex: 2;
  background-color: #1296db;
  color: #fff;
  height: 40px;
  line-height: 40px;
  text-align: center;
}

.cart_top_container {
  position: fixed;
  top: 0;
  width: 100%;
  margin-right: 20px;
  background-color: #f8f8f8;
  height: 40px;
  line-height: 40px;
  text-align: right;
  padding-right: 15px;
  font-size: 15px;
  color: #666;
  border-bottom: 1px solid #eee;
  z-index: 999;
}

.cart_top_btn {
  margin-right: 20px;
}

.check_all {
  flex: 1;
  border-top: 1px solid #d8d8d8;
  height: 39px;
  padding-top: 8px;
  font-size: 14px;
  color: #666;
  padding-left: 15px;
}
