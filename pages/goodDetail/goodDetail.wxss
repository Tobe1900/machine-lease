/* pages/goodDetail.wxss */

page {
  background-color: #f8f8f8;
  height: 100%;
  font-size: 32rpx;
  line-height: 1.6;
}

.page-body {
  padding-top: 60rpx;
}

.page-section {
  width: 100%;
  margin-bottom: 60rpx;
}

.page-section_center {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.page-section:last-child {
  margin-bottom: 0;
}

.page-section-gap {
  box-sizing: border-box;
  padding: 0 30rpx;
}

.page-section-spacing {
  box-sizing: border-box;
}

.swiper-item {
  display: block;
  height: 300px;
}

.slide {
  width: 100%;
  height: 270px;
}

.price_container {
  display: flex;
  flex-direction: column;
  background-color: #fff;
  padding-top: 5px;
  padding-left: 10px;
  padding-bottom: 8px;
}

.price_item {
  color: red;
  font-size: 15px;
}

.description_container {
  display: flex;
  flex-direction: column;
  background-color: #fff;
  margin-top: 20rpx;
}

.description_item {
  display: flex;
  flex-direction: row;
  border-bottom: 1px solid #f8f8f8;
  height: 40px;
  line-height: 40px;
  font-size: 15px;
}

.item_label {
  flex: 1;
  text-align: left;
  color: #666;
  padding-left: 8px;
}

.item_value {
  flex: 1;
  text-align: right;
  padding-right: 8px;
}
