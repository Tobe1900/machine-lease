.slideContainer {
  width: 100%;
  height: auto;
  border-bottom: 1px solid #ccc;
  position: fixed;
  top: 0;
  z-index: -99;
  background-color: #e6e9f0;
}

.cityBtn {
  position: fixed;
  display: inline-block;
  background-color: #f1f1f1;
  border-top-right-radius: 10px;
  border-bottom-right-radius: 10px;
  border: 1px solid #ccc;
  padding: 8px 8px 8px 12px;
  top: 100rpx;
  font-size: 13px;
  text-indent: 3px;
}

.slide {
  width: 100%;
  height: 100%;
}

.goodsContainer {
  /* position:fixed; */
  position: absolute;
  margin-top: 280px;
  width: 100%;
  z-index: -9999;
  top: 0;
  background: #eff0f2;
}

.nothingText {
  height: 40px;
  line-height: 40px;
  font-size: 28rpx;
  margin-left: calc(50% - 20px);
}

.instruction {
  display: flex;
  flex-direction: row;
  font-size: 25rpx;
  height: 32px;
  line-height: 32px;
  background: #e6e9f0;
  border-bottom: 1px solid #555;
}
