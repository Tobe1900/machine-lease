.container {
  overflow: scroll;
  margin-bottom: 120px;
}

.orc-wrapper {
  margin: 40rpx auto;
  width: 375rpx;
}

.intro {
  margin: 40rpx;
}

.btn {
  position: fixed;
  bottom: 0;
  width: 100%;
  background-color: #1296db;
  color: #fff;
}

.big-logos {
  text-align: center;
  margin: 10px;
  border: 1px solid #e1e1e1;
  padding: 10px;
}

.form-wrapper {
  display: flex;
  flex-direction: row;
  border-bottom: 1px solid #f1f1f1;
  height: 45px;
  padding: 0 12rpx;
}

.top {
  border-top: 1px solid #f1f1f1;
  /* margin-top: 20px; */
}

.label {
  display: inline-block;
  width: 25%;
  font-size: 15px;
  height: 50rpx;
  line-height: 100rpx;
}

.name-input {
  width: 100%;
  text-align: left;
  padding-left: 25px;
  margin-top: 12px;
  font-size: 14px;
}

.value {
  display: inline-block;
  width: 75%;
  font-size: 14px;
  height: 50rpx;
  line-height: 100rpx;
  color: #666;
  text-align: left;
}

.address {
  word-wrap: break-word;
  display: inline-block;
  width: 75%;
  font-size: 14px;
  height: 100rpx;
  line-height: 100rpx;
  color: #666;
  text-align: left;
}

.img {
  width: 300px;
  height: 180px;
}

.tip_container {
  height: 40px;
  line-height: 40px;
}

