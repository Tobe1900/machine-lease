      </view>
    </view>
  </view>
  <view class="news-item-container" bindtap="">
    <view class="news-item">
      <view class="news-item-left">
        <image src="../../icons/coupon.png" class="news-image" />
        <!-- <text class="fa fa-credit-card"></text> -->
