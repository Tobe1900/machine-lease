  width: 20px;
}

.choose_days_container {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}

.confirm_btn_container {
  width: 100%;
  padding: 0 10px 10px 10px;
}

.confirm_btn {
  height: 40px;
  line-height: 40px;
  color: #fff;
  background-color: #1296db;
}

.day_text {
  width: 30%;
  height: 36px;
  border: 1px solid #1296db;
  line-height: 36px;
  margin: 3px;
  color: #1296db;
}

.rent_container {
  display: flex;
  flex-direction: column;
  background-color: #fff;
  margin-top: 20rpx;
}

.rent_item {
  display: flex;
  flex-direction: row;
  border-bottom: 1px solid #f8f8f8;
  height: 40px;
  line-height: 40px;
  font-size: 28rpx;
}

.item_label {
  flex: 1;
  text-align: left;
  color: #666;
  padding-left: 8px;
}

.item_value {
  flex: 1;
  text-align: right;
  padding-right: 8px;
}

.bottom_container {
  position: fixed;
  bottom: 0;
  height: 40px;
  display: flex;
  flex-direction: row;
  width: 100%;
  background-color: #f8f8f8;
  z-index: 999;
}

.bottom_label {
  flex: 2;
  height: 39px;
  line-height: 39px;
  border-top: 1px solid #d8d8d8;
  font-size: 14px;
  text-indent: 10px;
}

.bottom_btn {
  flex: 2;
  background-color: #1296db;
  color: #fff;
  height: 40px;
  line-height: 40px;
  text-align: center;
}