/* pages/order/createOrder/index.js.wxss */

.dashed_container {
  text-align: center;
  padding: 15rpx;
  border: 2px dashed #666;
  color: #666;
  margin: 40rpx;
  background-color: #f8f8f8;
}

.flex_container {
  display: flex;
  flex-direction: row;
  border-bottom: 1px solid #f8f8f8;
}

.flex_image {
  width: 120px;
  height: 100px;
  flex: 1;
}

.flex_name {
  display: flex;
  flex-direction: column;
  flex: 2;
  justify-content: center;
  font-size: 15px;
  padding-left: 8px;
}

.flex_text {
  height: 36p;
  line-height: 36px;
}

.flex_num {
  flex: 1;
  justify-content: center;
  display: flex;
  flex-direction: column;
  font-size: 15px;
  text-align: center;
  color: #999;
}
