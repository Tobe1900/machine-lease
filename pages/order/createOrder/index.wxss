.days_flex {
  flex: 1;
  background-color: #fff;
  color: #888;
  font-size: 14px;
  padding-top: 10px;
}

.days_flex_text {
  height: 24px;
  line-height: 24px;
  width: 100%;
  display: inline-block;
  border-bottom: 2px solid #ccc;
}

.picker_default {
  display: flex;
  flex-direction: column;
  font-size: 12px;
  color: #888;
}

.picker_actived {
  display: flex;
  flex-direction: column;
  font-size: 12px;
  color: #888;
}

