.container {
  height: 100%;
  padding: 0;
}

.item {
  display: flex;
  width: 100%;
  /* height: 100px; */
  overflow: hidden;
  flex-direction: column;
  border-bottom: 1px solid #dedede;
  margin: 18rpx 0;
  background-color: #fff;
}

.order_container {
  display: flex;
  flex-shrink: 1;
  flex-grow: 1;
  padding: 20rpx 15rpx 0 15rpx;
  flex-wrap: wrap;
  font-size: 28rpx;
  flex-direction: column;
}

.text view {
  padding: 2px 0;
}

.description {
  flex: 1;
  font-size: 28rpx;
  /* justify-content: center; */
  text-align: left;
  padding: 4px 0;
  display: flex;
  flex-direction: row;
}
.order_item_btn{
  padding: 6px 0;
  text-align: right;
}
.order_item_btn button {
  height: 28px;
  line-height: 28px;
  width: 65px;
  font-size: 11px;
  padding: 0;
  border:1px solid #1296db;
  color:#1296db;
  border-radius: none;
}

.item_label {
  color: #888;
  display: inline-block;
  width: 160rpx;
}

.item_value {
  flex: 3;
  display: inline-block;
}

.product_container {
  margin: 5px 0 0 0;
  padding: 5px;
  border-top: 1px solid #dedede;
  border-bottom: 1px solid #dedede;
}

.product_item {
  display: flex;
  flex-direction: row;
  height: 60px;
}

.product_image {
  height: 60px;
  width: 60%;
}

.product_name {
  flex: 1;
  line-height: 60px;
  color: #888;
}

.status_text {
  color: #1296db;
}

.address_text {
  display: inline-block;
  padding-left: 30rpx;
}

.no_order_image {
  height: 60px;
  width: 50%;
  margin-top: 100px;
}

.no_records {
  color: #6e6e6e;
  text-align: center;
  width: 100%;
  display: inline-block;
  margin-top: 20px;
}

.hasmore {
  text-align: center;
  color: #d1d1d1;
  font-size: 25rpx;
  padding-top: 20px;
}

.no_more_text {
  text-align: center;
  color: #888;
  padding: 8px;
  font-size: 28rpx;
}

.hasmore-text {
  border-bottom: 1px solid #d1d1d1;
  width: 120px;
  display: inline-block;
}

.weui-loadmore {
  width: 65%;
  margin: 1.5em auto;
  line-height: 1.6em;
  font-size: 14px;
  text-align: center;
}

.weui-loadmore__tips {
  display: inline-block;
  vertical-align: middle;
}

.weui-loading {
  margin: 0 5px;
  width: 20px;
  height: 20px;
  display: inline-block;
  vertical-align: middle;
  -webkit-animation: weuiLoading 1s steps(12, end) infinite;
  animation: weuiLoading 1s steps(12, end) infinite;
  background: transparent url(data:image/svg+xml;base64,) no-repeat;
  background-size: 100%;
}

.scrollContainer {
  position: fixed;
  top: 0;
  width: 100%;
  height: 32px;
  background-color: #fff;
  white-space: nowrap;
  display: flex;
  flex-wrap: wrap;
  z-index: 999;
  border-bottom: 1px solid #ccc;
  padding-top: 8px;
}

.tab {
  flex: 1;
  display: inline-block;
  color: black;
  font-size: 28rpx;
  /* margin: 6rpx 18rpx; */
  text-align: center;
  padding: 10rpx;
  height: 28rpx;
  line-height: 28rpx;
}

.tab_selected {
  display: inline-block;
  font-size: 28rpx;
  /* margin: 6rpx 18rpx; */
  text-align: center;
  padding: 10rpx 10rpx 22rpx;
  height: 28rpx;
  line-height: 28rpx;
  color: #1296db;
  font-weight: bold;
  border-bottom: 2px solid #1296db;
}
