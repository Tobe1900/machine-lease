.container {
  height: 100%;
  padding: 0;
}

.item {
  display: flex;
  width: 100%;
  /* height: 100px; */
  overflow: hidden;
  flex-direction: column;
  border-bottom: 1px solid #dedede;
  margin: 8rpx;
  background-color: #fff;
}

.img {
  height: 100rpx;
  width: 100rpx;
  border-radius: 50%;
}

.text {
  display: flex;
  flex-shrink: 1;
  flex-grow: 1;
  padding: 20rpx 0 20rpx 12px;
  flex-wrap: wrap;
  font-size: 28rpx;
  flex-direction: column;
}

.text view {
  padding: 2px 0;
}

.description {
  flex: 1;
  font-size: 28rpx;
  justify-content: center;
  text-align: left;
  padding: 5px 0;
}
.item_label{
  color:#888;
  display:inline-block;
  width: 140rpx;
}
.item_value{

}
.no_records {
  color: #6e6e6e;
  text-align: center;
  width: 100%;
  display: inline-block;
}

.hasmore {
  text-align: center;
  color: #d1d1d1;
  font-size: 25rpx;
  padding-top: 20px;
}

.no_more_text {
  text-align: center;
  color: #888;
  padding: 8px;
  font-size: 28rpx;
}

.hasmore-text {
  border-bottom: 1px solid #d1d1d1;
  width: 120px;
  display: inline-block;
}

.weui-loadmore {
  width: 65%;
  margin: 1.5em auto;
  line-height: 1.6em;
  font-size: 14px;
  text-align: center;
}

.weui-loadmore__tips {
  display: inline-block;
  vertical-align: middle;
}

.weui-loading {
  margin: 0 5px;
  width: 20px;
  height: 20px;
  display: inline-block;
  vertical-align: middle;
  -webkit-animation: weuiLoading 1s steps(12, end) infinite;
  animation: weuiLoading 1s steps(12, end) infinite;
  background: transparent url(data:image/svg+xml;base64,) no-repeat;
  background-size: 100%;
}

.scrollContainer {
  position: fixed;
  top:0;
  width: 100%;
  height: 40px;
  background-color: #fff;
  white-space: nowrap;
}

.tab {
  display: inline-block;
  color: black;
  font-size: 30rpx;
  margin: 20rpx;
  text-align: center;
  padding: 10rpx;
  height: 28rpx;
  line-height: 28rpx;
}

.tab_selected {
  display: inline-block;
  font-size: 30rpx;
  margin: 20rpx;
  text-align: center;
  padding: 10rpx;
  height: 28rpx;
  line-height: 28rpx;
  color:#1296db;
}
